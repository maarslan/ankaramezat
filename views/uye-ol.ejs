<%-include("partials/header"); -%>
<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Üye Ol</h5>
            <form class="form-signin">
              <div class="form-label-group">
                <label for="inputName"><strong>Adınız</strong></label>
                <input type="text" class="form-control" placeholder="adınız" required>
              </div>
              <div class="form-label-group">
                <label for="inputSurname"><strong>Soyadınız</strong></label>
                <input type="text" class="form-control" placeholder="soyadınız" required>
              </div>
              <div class="form-label-group">
                <label for="inputEmail"><strong>Email adresiniz</strong></label>
                <input type="email" id="inputEmail" class="form-control" placeholder="e-mail adresiniz" required autofocus>

              </div>

              <div class="form-label-group">
                <label for="inputPassword"><strong>Şifreniz</strong></label>
                <input type="password" id="inputPassword" class="form-control" placeholder="şifreniz" required>

              </div>
              <div class="form-label-group">
                <label for="inputPhone"><strong>Telefon numaranız</strong></label>
                <input type="tel" id="inputPhone" class="form-control" placeholder="telefon Numaranız" required>

              </div>
              <div class="kaydet-butonu">
                <button class="btn btn-lg btn-dark btn-block text-uppercase" type="submit">Kaydet</button>
              </div>

              <hr class="my-4">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>




<%-include("partials/footer"); -%>
